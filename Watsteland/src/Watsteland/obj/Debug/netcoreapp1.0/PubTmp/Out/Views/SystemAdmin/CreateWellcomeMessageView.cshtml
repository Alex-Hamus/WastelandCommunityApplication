@model Watsteland.Models.WellcomeMessage

@{
    ViewData["Title"] = "Create Wellcome Message";
}


<div class="panel">
    <h2>Create Wellcome Message</h2>

    <form asp-action="CreateWellcomeMessageInfo">
        <div class="form-horizontal">
            <h4>Thread</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WellcomeTitle" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="WellcomeTitle" class="form-control" />
                    <span asp-validation-for="WellcomeTitle" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MessageDescription" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="MessageDescription"></textarea>
                    <span asp-validation-for="MessageDescription" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>tinymce.init({ selector:'textarea' });</script>
}
