@model Watsteland.Models.CommunityUpdates

<div class="panel">

    <h2>Create</h2>

    <form asp-action="AddCommunityUpdate">
        <div class="form-horizontal">
            <h4>Community Update</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UdateInformation" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="UdateInformation" class="form-control" />
                    <span asp-validation-for="UdateInformation" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>tinymce.init({ selector:'textarea' });</script>
}
