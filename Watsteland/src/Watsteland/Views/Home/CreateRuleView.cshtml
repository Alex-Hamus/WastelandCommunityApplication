@model Watsteland.Models.Rules

<div class="panel">
    <h2>Create</h2>

    <form asp-action="CreateRule">
        <div class="form-horizontal">
            <h4>Post</h4>
            <hr />
            <input type="hidden" asp-for="GameId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RuleDescription" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="RuleDescription" class="" />
                    <span asp-validation-for="RuleDescription" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>
